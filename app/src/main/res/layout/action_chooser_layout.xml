<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_20sdp"
    android:paddingRight="@dimen/_20sdp">

    <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:layout_gravity="center"
        android:src="@drawable/chatbot_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinssemibold"
        android:text="Hey Mahima, don't worry! I got you!\n\nI would suggest you to first calm down and then talk to Kia for solving your problem.\n\n\nWhat would you like to do?"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvcalmdown"
            android:layout_width="0dp"
            android:layout_height="@dimen/_145sdp"
            android:layout_weight="1"
            android:layout_marginRight="7.5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/palePink">

                <com.theophrast.ui.widget.SquareImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="-10dp"
                    android:src="@drawable/meditationlogo2"
                    android:padding="@dimen/_15sdp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/poppinssemibold"
                    android:textAlignment="center"
                    android:paddingBottom="10dp"
                    android:textStyle="bold"
                    android:text="Calm Down"
                    android:textColor="@color/darkTextColor"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvtalkcounsellor"
            android:layout_width="0dp"
            android:layout_height="@dimen/_145sdp"
            android:layout_weight="1"
            android:layout_marginLeft="7.5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightSkin">

                <com.theophrast.ui.widget.SquareImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="-10dp"
                    android:src="@drawable/femalecounsellor"
                    android:padding="@dimen/_30sdp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/poppinssemibold"
                    android:textAlignment="center"
                    android:paddingBottom="10dp"
                    android:textStyle="bold"
                    android:text="Talk to Kia"
                    android:textColor="@color/darkTextColor"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <Button
        android:id="@+id/btndlg1confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_2"
        android:backgroundTint="@color/newLightBlue"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:text="Let's Go!"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:textSize="@dimen/_13sdp"
        android:textAllCaps="false"
        android:paddingLeft="@dimen/_30sdp"
        android:paddingRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_30sdp"/>

</LinearLayout>