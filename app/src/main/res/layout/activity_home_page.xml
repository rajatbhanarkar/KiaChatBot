<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/dlmain"
    android:clipToPadding="false"
    tools:context=".HomePageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:background="@color/white"
        android:clipToPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/ivhpadiary"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentRight="true"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/ic_diary"
                android:background="@drawable/circle"
                android:backgroundTint="@color/newLightBlue" />

            <ImageView
                android:id="@+id/ivmpapropic"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/youngwoman"
                android:background="@drawable/circle"
                android:backgroundTint="@color/white"/>

            <TextView
                android:id="@+id/tvgreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="Hi, Mahima!"
                android:layout_marginLeft="@dimen/_45sdp"
                android:elevation="15dp"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />
        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="Is there anything worrying you?"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvhpacard1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_165sdp"
                            android:layout_marginRight="7.5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:elevation="0dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="15dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/palePink">

                                <com.theophrast.ui.widget.SquareImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:src="@drawable/financialproblems"
                                    android:scaleX="1.1"
                                    android:scaleY="1.1"
                                    android:layout_centerHorizontal="true"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentBottom="true"
                                    android:fontFamily="@font/poppinssemibold"
                                    android:textAlignment="center"
                                    android:paddingBottom="10dp"
                                    android:textStyle="bold"
                                    android:text="Financial\nProblems"
                                    android:textColor="@color/darkTextColor"
                                    android:textSize="@dimen/_12sdp" />

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvhpacard3"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_145sdp"
                            android:layout_marginRight="7.5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:elevation="0dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="15dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/skinColor">

                                <com.theophrast.ui.widget.SquareImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:padding="@dimen/_15sdp"
                                    android:layout_marginTop="-10dp"
                                    android:src="@drawable/familyproblems"
                                    android:layout_centerHorizontal="true"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentBottom="true"
                                    android:fontFamily="@font/poppinssemibold"
                                    android:textAlignment="center"
                                    android:paddingBottom="10dp"
                                    android:textStyle="bold"
                                    android:text="Family\nProblems"
                                    android:textColor="@color/darkTextColor"
                                    android:textSize="@dimen/_12sdp" />

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvhpacard5"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_145sdp"
                            android:layout_marginRight="7.5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:elevation="0dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="15dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/palePink">

                                <com.theophrast.ui.widget.SquareImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:padding="@dimen/_10sdp"
                                    android:layout_marginTop="-15dp"
                                    android:src="@drawable/healthproblems"
                                    android:layout_centerHorizontal="true"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentBottom="true"
                                    android:fontFamily="@font/poppinssemibold"
                                    android:textAlignment="center"
                                    android:paddingBottom="10dp"
                                    android:textStyle="bold"
                                    android:text="Health\nProblems"
                                    android:textColor="@color/darkTextColor"
                                    android:textSize="@dimen/_12sdp" />

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvhpacard2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_140sdp"
                            android:layout_marginLeft="7.5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:elevation="0dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="15dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/lightSkin">

                                <com.theophrast.ui.widget.SquareImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:padding="25dp"
                                    android:layout_marginTop="-15dp"
                                    android:scaleX="1.1"
                                    android:scaleY="1.1"
                                    android:src="@drawable/lovelifeproblems"
                                    android:layout_centerHorizontal="true"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentBottom="true"
                                    android:fontFamily="@font/poppinssemibold"
                                    android:textAlignment="center"
                                    android:paddingBottom="10dp"
                                    android:text="Love Life\nProblems"
                                    android:textColor="@color/darkTextColor"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"/>

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvhpacard4"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_145sdp"
                            android:layout_marginLeft="7.5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:elevation="0dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="15dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/periwinkle">

                                <com.theophrast.ui.widget.SquareImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:padding="35dp"
                                    android:layout_marginTop="-20dp"
                                    android:src="@drawable/friendproblems"
                                    android:layout_centerHorizontal="true"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentBottom="true"
                                    android:fontFamily="@font/poppinssemibold"
                                    android:textAlignment="center"
                                    android:paddingBottom="10dp"
                                    android:text="Friend Circle\nProblems"
                                    android:textColor="@color/darkTextColor"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"/>

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvhpacard6"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_170sdp"
                            android:layout_marginLeft="7.5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:elevation="0dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="15dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/lightSkin">

                                <com.theophrast.ui.widget.SquareImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:padding="15dp"
                                    android:layout_marginTop="-5dp"
                                    android:src="@drawable/traumaproblems"
                                    android:layout_centerHorizontal="true"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentBottom="true"
                                    android:fontFamily="@font/poppinssemibold"
                                    android:textAlignment="center"
                                    android:paddingBottom="10dp"
                                    android:text="Trauma\nProblems"
                                    android:textColor="@color/darkTextColor"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"/>

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="Recommended"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:weightSum="3"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvhpacard7"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_105sdp"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:elevation="0dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/palePink">

                            <com.theophrast.ui.widget.SquareImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="-5dp"
                                android:src="@drawable/meditationlogo"
                                android:padding="@dimen/_10sdp"
                                android:layout_centerHorizontal="true"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:fontFamily="@font/poppinssemibold"
                                android:textAlignment="center"
                                android:paddingBottom="10dp"
                                android:textStyle="bold"
                                android:text="Meditation"
                                android:textColor="@color/darkTextColor"
                                android:textSize="@dimen/_11sdp" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvhpacard8"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_105sdp"
                        android:layout_weight="1"
                        android:layout_marginLeft="2.5dp"
                        android:layout_marginRight="2.5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:elevation="0dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/lightSkin">

                            <com.theophrast.ui.widget.SquareImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:padding="20dp"
                                android:scaleX="1.6"
                                android:scaleY="1.6"
                                android:src="@drawable/physical_health"
                                android:layout_centerHorizontal="true"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:fontFamily="@font/poppinssemibold"
                                android:textAlignment="center"
                                android:paddingBottom="10dp"
                                android:text="Workout"
                                android:textColor="@color/darkTextColor"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvhpacard9"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_105sdp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:elevation="0dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/periwinkle">

                            <com.theophrast.ui.widget.SquareImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:padding="20dp"
                                android:scaleX="1.3"
                                android:scaleY="1.3"
                                android:src="@drawable/counsellortalk"
                                android:layout_centerHorizontal="true"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:fontFamily="@font/poppinssemibold"
                                android:textAlignment="center"
                                android:paddingBottom="10dp"
                                android:text="Counselling"
                                android:textColor="@color/darkTextColor"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>